{
  "compilerOptions": {
    /* ✅ Modern target & modules */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* ✅ Libs para features modernas */
    "lib": ["ES2022"],

    /* ✅ Seguridad y consistencia */
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    /* ✅ Mejor control de errores */
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* ✅ Debug */
    "sourceMap": true,

    /* ✅ Estructura de compilación */
    "rootDir": "src",
    "outDir": "build",

    /* ✅ BaseUrl + Paths para hexagonal */
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@config/*": ["config/*"],
      "@api/*": ["api/*"],
      "@infrastructure/*": ["infrastructure/*"]
    }
  },
  "include": ["src", "apollo-express.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
